{
  "name": "character-app",
  "version": "0.9.0",
  "description": "A smarter mobile tabel-top character sheet",
  "main": "index.js",
  "scripts": {
    "watch:js": "webpack-dev-server --config ./webpack.dev.js",
    "build:js": "webpack --config webpack.dev.js",
    "build:js:prod": "NODE_ENV=production webpack --config ./webpack.prod.js -p",
    "watch:css": "stylus -w src/ui --line-numbers --out build/style.css --compress -u nib --import src/ui/commonStyles/base",
    "build:css": "stylus src/ui --line-numbers --out build/style.css --compress -u nib --import src/ui/commonStyles/base",
    "build:css:prod": "stylus src/ui --out build/style.css --compress -u nib --import src/ui/commonStyles/base.styl",
    "statics": "cp -R src/ui/statics/. build",
    "clean": "rm -rf build",
    "deploy": "scp -r build/* root@ci.cmonocle.link:~/public/",
    "build": "yarn statics && yarn build:css && yarn build:js",
    "build:prod": "yarn statics && yarn build:css:prod && yarn build:js:prod",
    "start:static": "yarn build && serve --port 9966 -s -o build",
    "start": "yarn statics && yarn build:css && yarn watch:js",
    "serve": "serve --port 9966 -s -o build",
    "test": "tape -r babel-register ./tests/*.test.js | tap-spec"
  },
  "author": "Alex Petersen <theoperatore@gmail.com> (http://anpetersen.me)",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "fastclick": "1.0.6",
    "firebase": "4.1.3",
    "immutable": "^3.8.1",
    "prop-types": "^15.5.10",
    "react": "15.6.1",
    "react-addons-css-transition-group": "15.6.0",
    "react-dom": "15.6.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0",
    "swiper": "^3.4.2",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.4",
    "nib": "^1.1.2",
    "serve": "^10.1.1",
    "style-loader": "^0.18.2",
    "stylus": "0.54.5",
    "tap-spec": "4.1.1",
    "tape": "^4.7.0",
    "uglify-js": "3.0.23",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  }
}

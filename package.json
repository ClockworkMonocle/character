{
  "name": "character-app",
  "version": "0.9.0",
  "description": "A smarter mobile tabel-top character sheet",
  "main": "index.js",
  "scripts": {
    "js": "node ./bin/bundle.js",
    "js-min": "yarn js && uglifyjs build/bundle.js -o build/bundle.js --compress --mangle",
    "js-vendor": "node ./bin/bundle-vendor.js",
    "js-vendor-prod": "yarn js-vendor && uglifyjs build/vendor.js -o build/vendor.js --compress --mangle",
    "js-prod": "yarn js-vendor-prod && yarn js-min",
    "watch-js": "node ./bin/watch.js",
    "css": "stylus src/ui --line-numbers --out build/style.css --compress -u nib --import src/ui/commonStyles/base",
    "css-min": "stylus src/ui --out build/style.css --compress -u nib --import src/ui/commonStyles/base.styl",
    "watch-css": "stylus -w src/ui --line-numbers --out build/style.css --compress -u nib --import src/ui/commonStyles/base",
    "statics": "cp -R src/ui/statics/. build",
    "clean": "rm -rf build",
    "deploy": "scp -r build/* root@ci.cmonocle.link:~/public/",
    "build": "yarn run clean && yarn statics && yarn css && yarn js-vendor && yarn js",
    "watch-build": "yarn run clean && yarn statics && yarn css && yarn js-vendor && yarn watch-js",
    "build-prod": "yarn statics && yarn css-min && yarn js-prod",
    "build-ci": "NODE_ENV=production yarn build-prod",
    "build-deploy": "yarn build-ci && yarn deploy",
    "start": "serve --port 9966 -s build",
    "test": "tape -r babel-register ./tests/*.test.js | tap-spec"
  },
  "author": "Alex Petersen <theoperatore@gmail.com> (http://anpetersen.me)",
  "license": "MIT",
  "browserify": {
    "transform": [
      "babelify",
      "localenvify"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "debug": "^2.6.8",
    "fastclick": "1.0.6",
    "firebase": "4.1.3",
    "immutable": "^3.8.1",
    "prop-types": "^15.5.10",
    "react": "15.6.1",
    "react-addons-css-transition-group": "15.6.0",
    "react-dom": "15.6.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0",
    "swiper": "^3.4.2",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "14.4.0",
    "chalk": "2.0.1",
    "localenvify": "1.0.1",
    "nib": "^1.1.2",
    "serve": "^6.0.1",
    "stylus": "0.54.5",
    "tap-spec": "4.1.1",
    "tape": "^4.7.0",
    "uglify-js": "3.0.23",
    "watchify": "^3.9.0"
  }
}

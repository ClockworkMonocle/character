.loading-indicator-container
  display none
  position fixed
  z-index 99999999
  background-color rgba(0,0,0, 0.65);
  width 100%
  height 100%
  top 0
  left 0
  right 0
  bottom 0
  
  align-items center
  justify-content center

.loading-active
  display flex
  
.loading-animation
  display block
  font-size 10em
  background-color #333
  animation-duration 1000ms
  animation-name spin
  animation-iteration-count infinite
  animation-timing-function ease
  width 100%

@keyframes spin {
  0% {
    transform translateX(-100%)
    height 20px
  }
  
  65% {
    height 2px
  }
  
  100% {
    transform translateX(100%)
    height 2px
  }
}


.loading-indicator-container
  display none
  position fixed
  z-index 99999999
  background-color rgba(0,0,0, 0.65);
  width 100%
  height 100%
  top 0
  left 0
  right 0
  bottom 0

.loading-active
  align-items center
  justify-content center
  display flex
  height 100%
  
.loading-animation-top
  display block
  background-color #fff
  animation-duration 750ms
  animation-name moveTop
  animation-iteration-count infinite
  animation-timing-function ease
  animation-direction alternate
  margin-right 5px
  height 100px
  width 1px
  opacity 1
  border-radius 2px
  box-shadow 0px 0px 10px 3px #7fdbff
  
.loading-animation-middle
  display block
  background-color #fff
  animation-duration 750ms
  animation-name moveMiddle
  animation-iteration-count infinite
  animation-timing-function ease
  animation-direction alternate
  height 100px
  width 1px
  opacity 1
  border-radius 2px
  box-shadow 0px 0px 10px 3px #7fdbff
  
.loading-animation-bottom
  display block
  background-color #fff
  animation-duration 750ms
  animation-name moveBottom
  animation-iteration-count infinite
  animation-timing-function ease
  animation-direction alternate
  margin-left 5px
  height 100px
  width 1px
  opacity 1
  border-radius 2px
  box-shadow 0px 0px 10px 3px #7fdbff

@keyframes moveTop {
  to {
    transform translateX(-50px) scale(0.1)
  }
}

@keyframes moveBottom {
  to {
    transform translateX(50px) scale(0.1)
  }
}

@keyframes moveMiddle {
  from {
    transform scaleY(0.1)
  }
  to {
    transform scaleY(1)
  }
}
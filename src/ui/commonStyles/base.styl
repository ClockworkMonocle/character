/******************************************************************************
*
* appearance
*
******************************************************************************/
$base-padding = 10px
$base-padding-sm = 5px
$base-padding-md = 10px
$base-padding-lg = 15px
$base-border-radius = 2px
$base-width = 33.33333333333%
$base-width-lg = 66.6666666666%
$base-height = 60px
$base-margin = 35px
$base-component-margin = 10px
$base-margin-bottom = 10px

$font-size-small = 11px
$font-size-normal = 14px
$font-size-large = 16px
$font-size-xlarge = 32px

/******************************************************************************
*
* Colors
*
******************************************************************************/
$bg-blue = #d9edf7
$bg-red = #f2dede
$bg-green = #dff0d8
$bg-gold = #fcf8e3
$bg-dark = #ddd
$bg-gray = lighten(#333, 90%)
$text-blue = #31708f
$text-red = #a94442
$text-green = #3c763d
$text-gold = #8a6d3b
$text-purple = #b294bb
$text-gray = lighten(#333, 70%)

$base-background-color = #fff
$base-border-color = #ccc
$base-color = #333

$base-attack-color = #AB4642
$base-spell-color = #BA8BAF

$base-str-color = #A16946
$base-dex-color = #DC9656
$base-con-color = #F7ca88
$base-wis-color = #86c1b9
$base-int-color = #7cafc2
$base-cha-color = #a1b56c
$bg-proficient-color = #e8e8e8
$text-proficient-color = #383838

/******************************************************************************
*
* Global
*
******************************************************************************/
html, 
body
  height 100%
  
p
  margin 0
  padding 0
  
#mount
  overflow hidden
  height 100%
  
h1,
h2,
h3,
h4,
h5,
h6
  padding-top $base-padding
  padding-bottom $base-padding
  margin 0

.bg-blue
  background-color $bg-blue

.bg-red
  background-color $bg-red

.bg-green
  background-color $bg-green

.bg-gold
  background-color $bg-gold

.text-blue
  color $text-blue

.text-red
  color $text-red

.text-green
  color $text-green

.text-gold
  color $text-gold
  
.text-purple
  color $text-purple
  
.text-gray
  color $text-gray

.text-white
  color #fff
.text-black
  color #000

.bg-danger
  background-color $text-red
.bg-warning
  background-color $text-gold
.bg-ok
  background-color $text-green
  
.bg-gray
  background-color $bg-gray
  
.bg-attack
  background-color $base-attack-color

.bg-spell
  background-color $base-spell-color
  
.bg-str
  background-color $base-str-color

.bg-dex
  background-color $base-dex-color

.bg-con
  background-color $base-con-color

.bg-wis
  background-color $base-wis-color

.bg-int
  background-color $base-int-color

.bg-cha
  background-color $base-cha-color

.text-str
  color $base-str-color

.text-dex
  color $base-dex-color
  
.text-con
  color $base-con-color
  
.text-wis
  color $base-wis-color

.text-int
  color $base-int-color

.text-cha
  color $base-cha-color
  
.text-attack
  color $base-attack-color

.text-spell
  color $base-spell-color
  
.underline-str
  border-bottom 5px solid $base-str-color
  
.underline-dex
  border-bottom 5px solid $base-dex-color
  
.underline-con
  border-bottom 5px solid $base-con-color
  
.underline-wis
  border-bottom 5px solid $base-wis-color
  
.underline-int
  border-bottom 5px solid $base-int-color
  
.underline-cha
  border-bottom 5px solid $base-cha-color
  
.underline-proficient
  border-bottom 5px solid $bg-proficient-color
  
.border-attack
  border-color $base-attack-color

.border-spell
  border-color $base-spell-color
  
.border-str
  border-color $base-str-color

.border-dex
  border-color $base-dex-color

.border-con
  border-color $base-con-color

.border-wis
  border-color $base-wis-color

.border-int
  border-color $base-int-color

.border-cha
  border-color $base-cha-color

.border-good
  border-color $text-green

.border-warning
  border-color $text-gold
  
.border-bad
  border-color $text-red
  
.border-blue
  border-color $text-blue
  
.proficient
  color $text-proficient-color
  background-color $bg-proficient-color


/******************************************************************************
*
* footer
*
******************************************************************************/
.footer-container
  border-top 1px solid #ddd
  background-color #333
  color #ddd
  text-align center
  padding-top 30px
  padding-bottom 30px
  margin-top 10px

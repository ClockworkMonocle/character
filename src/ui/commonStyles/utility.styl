.separate-left
  border-left 1px solid $base-border-color

.separate-right
  border-right 1px solid $base-border-color
  
.text-center
  text-align center
  
.right
  float right

.left
  float left
  
.cf:after
  display table
  clear both
  content ""

.inline-block
  display inline-block
.inline
  display inline
.block
  display block
  
.flex
  display flex
.flex-columns
  flex-flow columns
.flex-auto
  flex 1 1 auto
  min-width 0
  min-height 0
.flex-center
  align-items center
  justify-content center
.flex-end
  justify-content flex-end
.disabled
  color $text-gray
.important
  font-weight bold
.m0
  margin 0
.m1
  margin $base-padding
.mt1
  margin-top $base-padding
.mt2
  margin-top 2 * $base-padding-sm
.mt3
  margin-top 3 * $base-padding-sm
.mt4
  margin-top 4 * $base-padding-sm
.ml1
  margin-left $base-padding-sm
.ml3
  margin-left 3 * $base-padding-sm
.ml2
  margin-left 2 * $base-padding-sm
.mr1
  margin-right 1 * $base-padding-sm
.mr2
  margin-right 2 * $base-padding-sm
.mb1
  margin-bottom $base-padding-sm
.mb2
  margin-bottom 2 * $base-padding-sm
.mb4
  margin-bottom 4 * $base-padding-sm
.mb6
  margin-bottom 6 * $base-padding-sm
.mt2
  margin-top 2 * $base-padding-sm
.mt6
  margin-top 6 * $base-padding-sm
.p0
  padding 0
.p1
  padding $base-padding-sm
.p2
  padding 2 * $base-padding-sm
.p3
  padding 3 * $base-padding-sm
.pt1
  padding-top $base-padding
.pt2
  padding-top 2 * $base-padding
.pl2
  padding-left 2 * $base-padding-sm
.pr2
  padding-right 2 * $base-padding-sm
.pl3
  padding-left 3 * $base-padding-sm
.pr3
  padding-right 3 * $base-padding-sm
  
.full-width
  width 100%
  
.subtext
  color #aaa
  font-size 0.9em
  margin-bottom $base-padding
  
  &.border-top
    border-top 1px solid $base-border-color
    padding-top $base-padding
  
  .icon
    margin-left $base-padding

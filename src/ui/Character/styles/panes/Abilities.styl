.ability-stat-container
  
  .ability-badge
    width 11px
    height 11px
    display inline-block
    border-radius 50%
    
  .ability-stat-title
    display inline-block
  
  .ability-stat-score
    font-size $font-size-small
  
  .ability-stat-mod
    font-size $font-size-xlarge
    
.sort-link
  color $text-blue
  text-decoration underline
  cursor pointer
  
  &:hover
    text-decoration none
  
  &.active
    color #333
    text-decoration none
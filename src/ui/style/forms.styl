.inputs
  margin-bottom 10px
  input[type='text'],
  select
    width 100%
    display inline-block
  input[type='checkbox']
    display inline-block
    margin-right $base-margin-bottom
  input[type='number']
    display inline-block
    width 100%
  p small
    color #aaa
    
.basic-tabs
  &.tabs-container
    margin-bottom 10px
    border 1px solid #ccc
    border-radius $base-border-radius
  .tab-container
    background-color #fff
    border 0
    padding 5px
    
    a
      text-decoration none
      &:hover
        text-decoration none
        
    &.active
      background-color #ccc
      border 0
.separate-left
  border-left 1px solid $base-border-color

.separate-right
  border-right 1px solid $base-border-color
  
.text-center
  text-align center
  
.right
  float right

.left
  float left
  
.cf:after
  display table
  clear both
  content ""

.inline-block
  display inline-block
  
.flex
  display flex
.flex-auto
  flex 1 1 auto
  min-width 0
  min-height 0
.flex-center
  align-items center

.vertical-align
  vertical-align middle

.m1
  margin $base-padding
.mt1
  margin-top $base-padding
.p1
  padding $base-padding-sm
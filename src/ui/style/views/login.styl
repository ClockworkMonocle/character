@import('base.styl')

.login-page
  width 100%

.login-content
  text-align center
  padding $base-padding
  width 100%

.login-title
  font-size 15em
  font-weight bold

.login-subtext
  color #bbb
  margin-top 15px

.login-input-group
  width 33.33333333333%
  margin 0 auto
  @media screen and (max-width: 480px)
    width 100%

.login-input
  margin 30px 0 10px 0
  padding $base-padding

.login-btn
  background-color lighten(#3c763d, 17%)
  color #fff
  &:active:enabled
    background-color darken(#3c763d, 10%)
  &:disabled
    background-color darken(#3c763d, 45%)


.login-input
.login-btn
  width 100%
  height 60px
  display block
  appearance none
  border 1px solid #ddd
  border-radius $base-border-radius

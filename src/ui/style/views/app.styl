.character-container
  height 100%
  display flex
  flex-flow column
  
.character-body
  flex 1
  -webkit-overflow-scrolling touch
  overflow-y scroll

header
  background-color #333
  color #fff
  & > div
    padding $base-padding
    
.base-pane-container
  height 100%
  overflow scroll
  
.interactable
  cursor pointer
  user-select none
  
  &:active
    background-color rgba(51, 51, 51, 0.15)

@import('base.styl')

.popover-container
  display inline-block

.popover-content-container
  position relative
  display inline-block

.popover-popover-container
  max-width 350px
  margin-top 5px
  background-color $base-background-color
  border 1px solid $base-border-color
  border-radius $base-border-radius
  padding $base-padding
  box-shadow 0px 0px 3px 1px $base-border-color
  position absolute
  opacity 0
  z-index -1
  transition opacity 250ms
  &.popover-active
    opacity 1
    z-index 1337

.popover-arrow
  position absolute
  width 0px
  height 0px
  margin-top -20px
  margin-left -15px
  border-left 15px solid transparent
  border-right 15px solid transparent
  border-bottom 10px solid #ddd
  &:after
    display block
    position relative
    content ""
    margin-top 2px
    margin-left -15px
    border-left 15px solid transparent
    border-right 15px solid transparent
    border-bottom 10px solid #fff

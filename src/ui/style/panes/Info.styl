@import('base.styl')

.info-container 
  padding-top 10px
  max-width 500px
  margin 0 auto
  display flex
  flex-flow row nowrap
  align-items flex-start

  .level-container
    text-align center
    flex 1
    h6
      margin 0px
    &:after
      clear both
      content ""
      display table

    .level
      font-size 128px
      margin-top 0px
    

  .info-stat-group
    flex 1
    
    .info-stat
      width 100%
      margin-bottom 2px
      background-color #eee
      
      .header
        background-color #ccc
        color white
        width 100%
        padding 5px
        display block
        
      .content
        padding 5px
        margin 5px auto